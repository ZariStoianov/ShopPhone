@model IndexViewModel

@{
    ViewData["Title"] = "Welcome";
}

@{
    var phones = Model.Phones;
    var firstPhones = phones.Any() ? phones[0] : null;
    var secondPhones = phones.Count() > 1 ? phones[1] : null;
    var thirdPhones = phones.Count() > 2 ? phones[2] : null;
}

@if (!phones.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to best place for SmartPhones</h1>
        <p class="lead">There are no phones in the system now!</p>
        <hr class="my-4">
        <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
        <p class="lead">
            <a asp-controller="Phones" asp-action="Add" class="btn btn-primary btn-lg">Add Phone</a>
        </p>
    </div>
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstPhones != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-50" src="@firstPhones.ImageUrl" alt="@firstPhones.Brand @firstPhones.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Phones" asp-action="Details" asp-route-id="@firstPhones.Id">@firstPhones.Year @firstPhones.Brand @firstPhones.Model</a></h5>
                </div>
            </div>
        }
        @if (secondPhones != null)
        {
            <div class="carousel-item">
                <img class="d-block w-50" src="@secondPhones.ImageUrl" alt="@secondPhones.Brand @secondPhones.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Phones" asp-action="Details" asp-route-id="@secondPhones.Id">@secondPhones.Year @secondPhones.Brand @secondPhones.Model</a></h5>
                </div>
            </div>
        }
        @if (thirdPhones != null)
        {
            <div class="carousel-item">
                <img class="d-block w-50" src="@thirdPhones.ImageUrl" alt="@thirdPhones.Brand @thirdPhones.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Phones" asp-action="Details" asp-route-id="@thirdPhones.Id">@thirdPhones.Year @thirdPhones.Brand @thirdPhones.Model</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="jumbotron">
    <div class="row-md-4">
        <h2 class="col-md-12 text-center">
            @Model.TotalPhones Phones
            @Model.TotalPrice Price
        </h2>
    </div>
</div>
