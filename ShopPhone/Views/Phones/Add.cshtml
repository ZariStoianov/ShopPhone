@model AddPhoneFormModel

@{ 
    ViewData["Title"] = "Add Phone";
}

<div class="container">
    <div class="row">
        <div class="offset-3 col-6">
            <h2 class="text-center">Add Phone</h2>
            <form>
                <div class="form-group">
                    <label asp-for="Brand"></label>
                    <input asp-for="Brand" class="form-control" placeholder="Samsung, iPhone...">
                </div>
                <div class="form-group">
                    <label asp-for="Model"></label>
                    <input asp-for="Model" class="form-control" placeholder="Samsung, iPhone...">
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Your Phone Image here...">
                </div>
                <div class="form-group">
                    <label asp-for="Year"></label>
                    <input asp-for="Year" class="form-control" placeholder="@DateTime.UtcNow.Year">
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Preview..."></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId">Example select</label>
                    <select class="form-control"CategoryId">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
            </form>
        </div>
    </div>
</div>