@model IEnumerable<PhoneServiceModel>

@{ ViewData["Title"] = "Phones Administration"; }

<h1>All Phones</h1>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Brand</th>
            <th scope="col">Model</th>
            <th scope="col">Year</th>
            <th scope="col">Category</th>
            <th scope="col">Approved</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var phone in Model)
        {
        <tr>
            <td scope="col">@phone.Id</td>
            <td scope="col">@phone.Brand</td>
            <td scope="col">@phone.Model</td>
            <td scope="col">@phone.Year</td>
            <td scope="col">@phone.CategoryName</td>
            <td scope="col">@(phone.IsPublic ? "Yes" : "No")</td>
            <td scope="col">
                <a asp-area="Admin" asp-controller="Phones" asp-action="Delete" asp-route-id="@phone.Id" class="btn btn-danger float-right ml-3">Delete</a>
                <a asp-area="" asp-controller="Phones" asp-action="Edit" asp-route-id="@phone.Id" class="btn btn-warning float-right ml-3">Edit</a>
                <a asp-area="Admin" asp-controller="Phones" asp-action="ChangeVisibility" asp-route-id="@phone.Id" class="btn btn-info float-right ml-3">@(phone.IsPublic ? "Hide" : "Show")</a>
                <a asp-area="" asp-controller="Phones" asp-action="Details" asp-route-id="@phone.Id" asp-route-information="@phone.ToFriendlyUrl()" class="btn btn-primary float-right ml-3">View</a>
            </td>
        </tr>
         }
    </tbody>
</table>